<div class ="contents row">
  <div class="content_post">
    <% if user_signed_in? && current_user.id == @memo.user_id %>
      <div class="more">
      <ul class="more_list">
        <li>
          <%= link_to 'EDIT', "/memos/#{@memo.id}/edit", method: :get %>
        </li>
        <li>
          <%= link_to 'DELETE', "/memos/#{@memo.id}", method: :delete %>
        </li>
      </ul>
    </div>
    <% end %>
    <%= simple_format(@memo.text) %>
    <span class="name">
      <a href="/users/<%= @memo.user.id %>">
      </a>
    </span>
  </div>
</div>